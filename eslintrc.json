{
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "quotes": ["error", "single"],          
      "semi": ["error", "always"],             
      "no-console": "warn",                    
      "indent": ["error", 2],                  
      "no-unused-vars": ["warn"],              
      "eqeqeq": ["error", "always"],          
      "no-var": "error",                       
      "prefer-const": "error"                  
    }
  }
  